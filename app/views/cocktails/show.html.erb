<!-- show.html.erb -->




<div class="wrapper">
  <div class="container">

      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo %>');">
        <div class="card-description">
          <div class="card-category">
            <%= @cocktail.name %>
          </div>
          <% @cocktail.doses.each do |dose| %>
            <%= dose.description %> - <%= dose.ingredient.name %>
            <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
              <i class='fas fa-trash-alt'></i>
            <% end %>
          <% end %>
        </div>
      </div>

  </div>
</div>

<%= link_to "+ Add a new Dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to cocktail list", cocktails_path %>
