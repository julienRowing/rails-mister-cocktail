<!-- show.html.erb -->
<h1> <%= @cocktail.name %> </h1>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<br>
<div class="wrapper">
  <div class="container">
    <div class="card">
      <ul class="list">
          <% @cocktail.doses.each do |dose| %>
            <li> <%= dose.description %> - <%= dose.ingredient.name %>

              <%= link_to cocktail_path(@cocktail),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
                <i class='fas fa-trash-alt'></i>
              <% end %>
            </li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

<%= link_to "+ Add a new Dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to cocktail list", cocktails_path %>
